{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
        {
            "description": [
                "Auto-merge container updates for minor, patch and digest"
            ],
            "matchDatasources": [
                "docker"
            ],
            "automerge": true,
            "automergeType": "pr",
            "matchUpdateTypes": [
                "minor",
                "patch",
                "digest"
            ]
        }
    ]
}