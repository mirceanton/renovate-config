{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        ":semanticCommits"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "major",
                "minor",
                "patch"
            ],
            "matchDatasources": [
                "rubygems"
            ],
            "semanticCommitScope": "ruby",
            "semanticCommitType": "fix"
        },
        {
            "matchDatasources": [
                "rubygems"
            ],
            "semanticCommitScope": "ruby"
        }
    ]
}