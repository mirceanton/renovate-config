{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        ":semanticCommits"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "major",
                "minor",
                "patch"
            ],
            "matchDatasources": [
                "go",
                "gomod",
                "golang-version"
            ],
            "semanticCommitScope": "go",
            "semanticCommitType": "fix"
        },
        {
            "matchDatasources": [
                "go",
                "gomod",
                "golang-version"
            ],
            "semanticCommitScope": "go"
        }
    ]
}